<Window x:Class="PrestamosJuegos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrestamosJuegos"
        mc:Ignorable="d"
        Title="Principal" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Icon="\Resources\xboxLogo.png">
    <Grid>
        <Menu Height="20" VerticalAlignment="Top">
            <MenuItem Header="Registros">
                <MenuItem Header="Registrar Amigo" Click="MenuItem_Click"/>
                <MenuItem Header="Entrada Juego" Click="MenuItem_Click_1"/>
                <MenuItem Header="Registro Juego" Click="MenuItem_Click_2"/>
                <MenuItem Header="Registrar Prestamo" Click="MenuItem_Click_3"/>
            </MenuItem>
            <MenuItem Header="Consultas">
                <MenuItem Header="Cosultar Amigos" Click="MenuItem_Click_4"/>
                <MenuItem Header="Cosultar Entrada" Click="MenuItem_Click_5"/>
                <MenuItem Header="Cosultar Juegos" Click="MenuItem_Click_6"/>
                <MenuItem Header="Cosultar Prestamos" Click="MenuItem_Click_7"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
